<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_sheet"
    android:orientation="vertical">

    <TextView
       android:text="حمایت شما باعث دلگرمی ما در توسعه نرم افزار می گردد"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#000000" />

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2" />

    <TextView
        android:id="@+id/one_donate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:gravity="center|right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="1،000 تومان"
        android:textColor="#cc000000" />

    <TextView
        android:id="@+id/two_donate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:gravity="center|right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="2،000 تومان"
        android:textColor="#cc000000" />

    <TextView
        android:id="@+id/three_donate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:gravity="center|right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="5،000 تومان"
        android:textColor="#cc000000" />

</LinearLayout>